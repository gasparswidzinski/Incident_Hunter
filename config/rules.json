
{
  "system_monitor": {
    "check_interval_seconds": 60,
    "cpu_threshold_percent": 85,
    "memory_threshold_percent": 90
  },
  "process_hunter": {
    "blacklisted_names": ["nc.exe", "ncat", "netcat", "mimikatz", "keygen","notepad.exe"],
    "suspicious_paths": ["/tmp", "C:\\Windows\\Temp", "AppData\\Local\\Temp"]
  },
  "network_hunter": {
    "max_failed_logins": 5,
    "whitelisted_ips": ["192.168.1.1", "127.0.0.1"],
    "safe_ports": [80, 443, 53, 445, 135, 139],
    "whitelist_apps": [
        "steam.exe", "steamwebhelper.exe", "discord.exe", 
        "chrome.exe", "nvidia web helper.exe",
        "nvcontainer.exe", "nvidia share.exe", "lghub_agent.exe",
        "svchost.exe", "opera.exe"
    ]
  },
  "actions": {
    "enable_email_alert": true,
    "enable_auto_block": false
  }
}